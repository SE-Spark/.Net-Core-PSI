@model PSI_NET_CORE.Models.Register

@{
    Layout = null;
}
<html>
<head>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.0/mdb.min.css"
          rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("RegisterUser", "Auth", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i> </span>
            </div>
            <input  class="form-control" placeholder="username"asp-for="Username" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i> </span>
            </div>
            <input  type="password" class="form-control" placeholder="password" asp-for="Password" />
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i> </span>
            </div>
            <input type="password" asp-for="confirmPswd" placeholder="Repeat password" class="form-control" />
            <span asp-validation-for="confirmPswd" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-3">Sign Up</button>
    }

    @section Scripts {

        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.0/mdb.min.js"></script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }


</body>
</html>