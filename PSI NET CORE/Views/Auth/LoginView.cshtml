@model PSI_NET_CORE.Models.Login

@{
    Layout = null;
}
<html>
<head>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.0/mdb.min.css"
          rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("LoginUser", "Auth", FormMethod.Post, new { onsubmit = "return SubmitUserLoginForm(this)" }))
    {
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i> </span>
            </div>
            <input type="text" class="form-control"placeholder="username" asp-for="Username" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i> </span>
            </div>
            <input type="password" class="form-control" placeholder="password"asp-for="Password" />
        </div>

        <div class="row mb-4">
            <div class="col-md-6 d-flex justify-content-center">
                <div class="form-check mb-3 mb-md-0">
                    <input class="form-check-input"
                           type="checkbox"
                           value=""
                           id="loginCheck"
                           checked />
                    <label class="form-check-label" for="loginCheck"> Remember me </label>
                </div>
            </div>

            <div class="col-md-6 d-flex justify-content-center">
                <a href="#!">Forgot password?</a>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

    }

    @section Scripts {

        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.0/mdb.min.js"></script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
</body>
</html>
