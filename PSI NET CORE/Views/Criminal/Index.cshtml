@model IEnumerable<PSI_NET_CORE.Models.Criminal>

@{
    ViewData["Title"] = "Criminal";
}

<h1>Criminal</h1>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("CreateUpdate","Criminal")')"><i class="fa fa-plus"></i> Add New</a>

<table id="Criminaltb" class="table table-striped table-bordered " style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NationalID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassPortNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrimeDate)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts {

    <script>
        var dataTable, Popup;
        $(document).ready(function () {
            dataTable= $("#Criminaltb").DataTable({
                "ajax": {
                    "url": "/Criminal/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "nationalID" },
                    { "data": "passPortNo" },
                    { "data": "crime" },
                    { "data": "description" },
                    { "data": "crimeDate" },
                    {"data":"id" , "render" : function (data) {
                        return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("CreateUpdate", "Criminal")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm js-delete' data-citizen-id=" + data + " style='margin-left:5px'><i class='fa fa-trash'></i> Delete</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"150px"
                    }
                ],
                "language": {
                    "emptyTable": "No data Found, Please click on <b> Add New </b> Button"
                }

            });

        });

        //update/Edit popup
        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Criminal Details',
                        height: 500,
                        width: 700,
                        background: '#808080',
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }

                    });
                });
        }
        //update/insert form submission
        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                        else {
                            Popup.dialog('close');
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "danger"
                            })
                        }
                    }
                });
            }
            return false;
        }
        //deletion
        $("#Criminaltb").on("click", ".js-delete", function () {
            var button = $(this);
            bootbox.confirm("Are you sure you want to delete?", function (result) {
                if (result) {
                    $.ajax({
                        url: "/Criminal/Delete/" + button.attr("data-citizen-id"),
                        method: "POST",
                        success: function (data) {
                            if (data.success) {
                                dataTable.row(button.parents("tr")).remove().draw();
                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "success"
                                });
                            }
                            else {
                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "alert-info"
                                });
                            }
                        }
                    });
                }

            });
        });
    </script>
}
