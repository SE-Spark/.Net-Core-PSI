@model PSI_NET_CORE.Models.Criminal

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("CreateUpdate", "Criminal", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NationalID" class="control-label"></label>
                <input asp-for="NationalID" class="form-control" />
                <span asp-validation-for="NationalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassPortNo" class="control-label"></label>
                <input asp-for="PassPortNo" class="form-control" />
                <span asp-validation-for="PassPortNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime" class="control-label"></label>
                <input asp-for="Crime" class="form-control" />
                <span asp-validation-for="Crime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrimeDate" class="control-label"></label>
                <input asp-for="CrimeDate" class="form-control" />
                <span asp-validation-for="CrimeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
        </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
